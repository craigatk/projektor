<configuration>
    <if condition='isDefined("JSON_LOGGER_TIME_MILLIS")'>
        <then>
            <appender name="base.appender" class="ch.qos.logback.core.ConsoleAppender">
                <encoder class="net.logstash.logback.encoder.LogstashEncoder">
                    <fieldNames>
                        <timestamp>timeMillis</timestamp>
                    </fieldNames>
                    <timestampPattern>[UNIX_TIMESTAMP_AS_NUMBER]</timestampPattern>
                </encoder>
            </appender>
        </then>
        <else>
            <if condition='isDefined("JSON_LOGGER")'>
                <then>
                    <appender name="base.appender" class="ch.qos.logback.core.ConsoleAppender">
                        <encoder class="net.logstash.logback.encoder.LogstashEncoder"/>
                    </appender>
                </then>
                <else>
                    <appender name="base.appender" class="ch.qos.logback.core.ConsoleAppender">
                        <encoder>
                            <pattern>%d{YYYY-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
                        </encoder>
                    </appender>
                </else>
            </if>
        </else>
    </if>

    <Logger name="org.jooq" level="info">
        <AppenderRef ref="Console"/>
    </Logger>

    <root level="INFO">
        <appender-ref ref="base.appender"/>
    </root>

</configuration>